                           http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd">

   
    <!-- import other bean config resource files -->
    <import resource="classpath*:spring-beans/schoolruns-datasource-config.xml" />
    <import resource="classpath*:spring-beans/schoolruns-common-service-config.xml" />
    <import resource="classpath*:spring-beans/schoolruns-security-service-config.xml" />
    
    <jpa:repositories base-package="com.okmich.schoolruns.employee.service.repo" /> 
    <tx:annotation-driven />
    <context:component-scan base-package="com.okmich.schoolruns.employee.service" />
    
    
        
</beans>